<% if not projects.nil? and projects.count > 0 %>
  <h2><%= title %></h2>
  <div class=projects>
    <ul class=header>
      <li class=name><%= t('users.dashboard.project_name') %></li>
      <li class=from><%= t('users.dashboard.translated_from') %></li>
      <li class=to><%= t('users.dashboard.translated_to') %></li>
      <li class=edit><%= t('users.dashboard.actions') %></li>
    </ul>
    <%= render partial: "shared/project", collection: projects %>
  </div>
<% else %>
	<% if defined? can_be_new %>
  		<h2><%= t('users.dashboard.dont_have_projects') %></h2>
    	<%= link_to t('users.dashboard.create_one_project'), new_project_path  %>
    <% end %>
<% end %>

