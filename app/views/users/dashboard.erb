<div id=dashboard>
  <h1><%= t('users.dashboard.hi') % @user.name %></h1>

  <div id="projects">
  	  <% if @user.has_no_project? %>
  	  	  <h2><%= t('users.dashboard.dont_have_projects') %></h2>
      	  <%= link_to t('users.dashboard.create_one_project'), new_project_path  %>
  	  <% else %>
    	<%= render partial: "shared/projects", locals: {projects: @user.projects, title: t('users.dashboard.projects'), can_be_new: true } %>
    	<%= render partial: "shared/projects", locals: {projects: @user.review_projects, title: t('users.dashboard.reviews') } %>
    	<%= render partial: "shared/projects", locals: {projects: @user.translation_projects, title: t('users.dashboard.translators') } %>
  	  <% end %>

  </div>

</div>
